#include <iostream>

using namespace std;

int main()
{
    int ile,tab[1001],x,y,z;

    cin>>ile;
    cout<<endl;

    for (int i=0;i<ile;i++)

        {
            cin>>x>>y;
            z=((2*(x*y))/(x+y));
            tab[i]=z;
            cout<<endl;
        }

        cout<<endl;

    for (int j=0;j<ile;j++)

        {
            cout<<tab[j]<<endl;
            cout<<endl;
        }
    return 0;
}
